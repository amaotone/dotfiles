def _get_git_user():
    """Gitのユーザー名を表示するフィールド"""
    user = $(git config user.name).strip()
    return user if user else None
$PROMPT_FIELDS["gituser"] = _get_git_user

def _success_color():
    """最後のコマンドが成功したかで色を変える"""
    if __xonsh__.history.rtns and __xonsh__.history.rtns[-1] != 0:
        return "{#E38692}"  # fail
    else:
        return "{#FFF280}"  # success
$PROMPT_FIELDS["success_color"] = _success_color

$XONSH_APPEND_NEWLINE = True
$PROMPT = lambda: "\n{success_color}┌{BOLD_#FFF280}[ {cwd} ]{#8BA7D5}{gituser: {}}{gitstatus: {}}\n{success_color}└➤ "
