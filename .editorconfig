root = true

[*]
charset = utf-8
indent_style = space
tab_width = 4
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
tab_width = 4
indent_size = 4

[*.{js,jsx,ts,tsx,vue}]
tab_width = 2
indent_size = 2

[.*]
tab_width = 2
indent_size = 2

[*.{json,yaml,toml,yml,tml}]
tab_width = 2
indent_size = 2
